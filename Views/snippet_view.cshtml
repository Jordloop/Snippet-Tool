@{
  Layout="Shared/_Layout";
}

@if ( @Model.Count != 0 )
  {

    <div class="row">
    @foreach (var snippet in Model)
    {
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><a href="/snippet/@snippet.Id">@snippet.Description</a></h3>
          </div>
        </div>
      </div>
    }
    </div>

  }
else
{
  <p>No snippets to view.</p>
}
